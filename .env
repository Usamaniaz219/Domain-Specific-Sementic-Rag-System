# Application settings
ENVIRONMENT=development
DEBUG=true

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2
API_KEY="my-rag-system-password-123"  # Your chosen password here

# Database - NO CHANGES NEEDED
DATABASE_URL=sqlite:///./rag_system.db

# Vector store
VECTOR_STORE_TYPE=chroma
COLLECTION_NAME=rag_documents

# Embedding model
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# Reranker model
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# LLM settings
# LLM_PROVIDER=gemini
# # LLM_MODEL=gpt-3.5-turbo
# LLM_MODEL = gemini-1.5-flash
# MAX_TOKENS=500
# TEMPERATURE=0.1

LLM_PROVIDER=gemini
LLM_MODEL=gemini-1.5-flash

TEMPERATURE=0.1
MAX_TOKENS=1000

# API keys - REPLACE WITH YOUR REAL OPENAI KEY
# OPENAI_API_KEY=""

GEMINI_API_KEY=""
# Cache
CACHE_TTL=3600

# Monitoring
ENABLE_MONITORING=true
PROMETHEUS_PORT=8001